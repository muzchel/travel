<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="#333333">


    <TextView
        android:layout_width="269dp"
        android:layout_height="82dp"
        android:layout_marginHorizontal="45sp"
        android:layout_marginBottom="20sp"
        android:text="Добро пожаловать, администратор!!!"
        android:textColor="@color/white"
        android:textSize="28sp" />

    <!-- Кнопка для перехода в управление турами -->
    <Button
        android:id="@+id/buttonTours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Туры"
        android:textSize="18sp"
        android:background="@color/orange"
        android:textColor="@color/white"/>

    <!-- Кнопка для перехода в управление пользователями -->
    <Button
        android:id="@+id/buttonUsers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Пользователи"
        android:textSize="18sp"
        android:background="@color/orange"
        android:layout_marginTop="15sp"
        android:textColor="@color/white"/>

    <!-- Кнопка для выхода -->
    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Выход"
        android:textSize="18sp"
        android:layout_marginTop="15sp"/>

</LinearLayout>
